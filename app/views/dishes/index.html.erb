<%= link_to "Add new dish", new_dish_path, :class => "btn btn-primary btn-lg" %>

<h1>Breakfast</h1>

<table class='table'>
  <thead class="thead-light">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Cooking time</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  
    <% @breakfasts.each do |breakfast| %>
      <tr>
        <td><%= breakfast.title %></td>
        <td><%= breakfast.description %></td>
        <td><%= breakfast.duration %></td>
        <td><%= link_to 'Show', dish_path(breakfast) %></td>
        <td><%= link_to 'Delete', dish_path(breakfast), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

